<li id="budget-settings-list-item-{{budget-id}}" class="list-group-item">
  <div class="btn-group btn-group-sm pull-right budget-settings-list-default onLogoffShow" role="group">
    <button type="button" class="btn btn-success budget-rename-button hidden" aria-label="umbenennen">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </button>
    <button type="button" class="btn btn-default budget-up-button" aria-label="hoch bewegen">
      <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
    </button>
    <button type="button" class="btn btn-default budget-down-button" aria-label="runter bewegen">
      <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
    </button>
    <button type="button" class="btn btn-danger budget-hide-button onLogoffShow">ausblenden</button>
    <button type="button" class="btn btn-success budget-show-button hidden onLogoffHide">anzeigen</button>
    <button type="button" class="btn btn-danger budget-delete-button hidden onLogoffHide">lÃ¶schen</button>
  </div>
  <h4 class="list-group-item-heading budget-settings-list-default onLogoffShow">
    {{#if budget-heart}}<span class="glyphicon glyphicon-heart text-danger" aria-hidden="true"></span>{{/if}}
    <span class="budget-{{budget-id}}-name">{{budget-name}}</span>
  </h4>
  <div class="budget-settings-list-rename onLogoffHide hidden">
    <form class="form-inline">
      <div class="form-group form-group-sm">
        <label class="sr-only" for="budget-settings-list-{{budget-id}}-name">Name des Budgets</label>
        <input type="text" class="form-control onLogoffClearVal" id="budget-settings-list-item-{{budget-id}}-name" placeholder="Name des Budgets">
      </div>
      <button type="submit" class="budget-settings-list-ok btn btn-success btn-sm">OK</button>
      <button type="reset" class="budget-settings-list-cancel btn btn-danger btn-sm">Abbrechen</button>
    </form>
  </div>
</li>
